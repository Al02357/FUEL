<launch>

  <arg name="uav_name" default="/uav0"/>
  <arg name="uav_name_" default="uav0"/>

  <!-- initial pose -->
  <arg name="init_x_" default="0.0"/>
  <arg name="init_y_" default="0.0"/>
  <arg name="init_z_" default="0.0"/>
  
  <!-- odom and sensor pose -->
  <arg name="odom_topic" value="$(arg uav_name)/mavros/local_position/odom"/>

  <!-- cam l515 -->
  <include file="$(find exploration_manager)/launch/include/rs_l515.launch">


  <!-- pub sensor pose (convert from odom, if not provided) -->
  <!-- <node name="pub_sensor_pose" pkg="run_onboard" type="pub_sensor_pose" output="screen"> 
			<param name="uav_name" value="$(arg uav_name)"/>
	</node> -->

  <!-- exploration node -->
  <include file="$(find exploration_manager)/launch/include/algorithm_camera.launch">

    <arg name="map_size_x_" value="50.0"/>
    <arg name="map_size_y_" value="50.0"/>
    <arg name="map_size_z_" value=" 3.0"/>

    <arg name="box_min_x" value="-10.0"/>
    <arg name="box_min_y" value="-10.0"/>
    <arg name="box_min_z" value=" -0.2"/>
    <arg name="box_max_x" value="10.0"/>
    <arg name="box_max_y" value="10.0"/>
    <arg name="box_max_z" value="2.0"/>

    <arg name="rotate_lidar_points" value="false"/>

    <arg name="odometry_topic" value="$(arg odom_topic)"/>
    <arg name="sensor_pose_topic" value="$(arg uav_name)/mavros/vision_pose/pose"/>
      
    <!-- depth topic: depth image, 640x480 by default -->
    <!-- cloud topic: point cloud measurement  -->
    <!-- subscribe ONLY TO ONE of the two topics -->
    <arg name="depth_topic" value="$(arg uav_name)/l515/depth/image_rect_raw"/>
    <arg name="cloud_topic" value="$(arg uav_name)/bf_lidar_$(arg uav_name_)/points_raw_"/>

    <arg name="max_vel" value="0.6" />
    <arg name="max_acc" value="0.8" />

  </include>
 

  <!-- trajectory server -->
  <node pkg="plan_manage" name="traj_server" type="traj_server" output="screen">
    
    <remap from="/position_cmd" to="$(arg uav_name)/planning/pos_cmd"/>

    <remap from="/odom_world" to="$(arg odom_topic)"/>
    <param name="traj_server/time_forward" value="1.5" type="double"/>
    <param name="traj_server/pub_traj_id" value="4" type="int"/>
    <param name="traj_server/init_x" value="$(arg init_x_)" type="double"/>
    <param name="traj_server/init_y" value="$(arg init_y_)" type="double"/>
    <param name="traj_server/init_z" value="$(arg init_z_)" type="double"/>

    <param name="perception_utils/top_angle" value="0.56125" type="double"/>
    <param name="perception_utils/left_angle" value="0.69222" type="double"/>
    <param name="perception_utils/right_angle" value="0.68901" type="double"/>
    <param name="perception_utils/max_dist" value="8.0" type="double"/>
    <param name="perception_utils/vis_dist" value="4.0" type="double"/>  

  </node>
  
  <!-- waypoint_generator -->
  <node pkg="waypoint_generator" name="waypoint_generator" type="waypoint_generator" output="screen">
    <remap from="~odom" to="$(arg odom_topic)"/>        
    <remap from="~goal" to="/move_base_simple/goal"/>
    <remap from="~traj_start_trigger" to="/traj_start_trigger" />
    <param name="waypoint_type" value="point"/>    
  </node>


</launch>
